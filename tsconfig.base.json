{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@projects-nx-mono/headless-components": [
        "libs/headless-components/src/index.ts"
      ],
      "@projects-nx-mono/tic-tac-toe-shared": [
        "libs/tic-tac-toe-shared/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
